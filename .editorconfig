root = true

# Project was started on macOS, stick with that EOL style.
[*]
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.{js,py}]
charset = utf-8

[*.{cc,c,h}]
indent_style = space
indent_size = unset

[*.py]
indent_style = space
indent_size = 4

[*.{net,sch}]
end_of_line = unset
trim_trailing_whitespace = unset
insert_final_newline = unset

[Makefile]
indent_style = tab
indent_size = 8

# Matches the exact files either package.json or .travis.yml
[{package.json,.travis.yml}]
indent_style = space
indent_size = 2
